    <template id="collection_report_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h4>Milk Collection Receipt</h4>
                    </div>
                    <table>
                        <tr>
                            <td>Date</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.collection_date">
                                    <t t-esc="doc.collection_date"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Member</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.member_id">
                                    <t t-esc="doc.member_id.name"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Cattle Type</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.cattle_type_id">
                                    <t t-esc="doc.cattle_type_id.name"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Quantity (Ltr)</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.qty">
                                    <t t-esc="doc.qty"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Fat</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.fat">
                                    <t t-esc="doc.fat"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Rate</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.rate">
                                    <t t-esc="doc.rate"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Amount</td>
                            <td>:</td>
                            <td>
                                <t t-if="doc.amt">
                                    <t t-esc="doc.amt"/>
                                </t>
                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
