<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="controller_example_report_form_view" model="ir.ui.view">
        <field name="name">controller.example.report.form.view</field>
        <field name="model">controller.example.report</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
<!--                    <button name="print_report_new" string="Preview Report" type="object" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_controller_example_report" model="ir.actions.act_window">
        <field name="name">Controller Example Report</field>
        <field name="res_model">controller.example.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="controller_example_report_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="example_report" name="XLSX Report" parent="warranty.warranty_root_menu" action="action_controller_example_report"/>
    </data>
</odoo>